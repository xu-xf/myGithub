/* miniprogram/pages/lottery/lottery.wxss */
.title {
  font-size: 18px;
  text-align: center;
  margin: 40rpx 0;
}
.chartpie {
  width: 100%;
  height: 600rpx;
  position: relative;
}
.roundArrow {
  position: absolute;
  width: 130rpx;
  height: 130rpx;
  left: 50%;
  top: 50%;
  margin: -65rpx;
  background: skyblue;
  border-radius: 50%;
  line-height: 130rpx;
  text-align: center;
}
.arrow {
  position: absolute;
  width: 0;
  height: 0;
  bottom: 100rpx;
  left: 50%;
  margin-left: -15px;
  border-style: solid;
  border-color: transparent transparent skyblue transparent;
  border-width: 50px 15px;
}
.prize-list {
  border: 1px solid skyblue;
  padding: 0 30rpx 30rpx;
  margin: 50rpx 30rpx 0 30rpx;
  box-sizing: border-box;
}
.prize-list text{
  display: block;
  font-size: 12px;
  line-height: 2.5;
  
}
.prize-list swiper-item {
  border-bottom: 1px dashed #ccc;
}
.round-circle {
  display: flex;
  justify-content: flex-start;
}
.round-circle view{
  width: 100rpx;
  height: 100rpx;
  margin: 0 30rpx;
  text-align: center;
  background: pink;
}
.roundbtn {
  margin: 60rpx auto;
}
.slide {
  margin: 100rpx 0;
}